    <script>
    $(document).ready(function() {
        // Toggle mobile menu
        const menuToggle = document.querySelector('.menu-toggle');
        const navLinks = document.querySelector('.nav-links');

        if (menuToggle && navLinks) {
            menuToggle.addEventListener('click', function() {
                navLinks.classList.toggle('active');
            });
        }

        // Toggle delegation active status
        $('.toggle-delegation').click(function() {
            const delegationId = $(this).data('delegation-id');
            const active = $(this).data('active');
            const button = $(this);

            $.ajax({
                url: `/toggle_delegation/${delegationId}`,
                method: 'POST',
                success: function(response) {
                    if (response.success) {
                        // Update UI
                        button.data('active', response.active ? 1 : 0);
                        button.text(response.active ? 'Deactivate' : 'Activate');
                        button.closest('tr').find('.badge')
                            .removeClass('badge-success badge-secondary')
                            .addClass(response.active ? 'badge-success' : 'badge-secondary')
                            .text(response.active ? 'Active' : 'Inactive');
                    } else {
                        alert('Failed to update delegation status');
                    }
                },
                error: function() {
                    alert('Failed to update delegation status');
                }
            });
        });

        // Delete delegation
        $('.delete-delegation').click(function() {
            const delegationId = $(this).data('delegation-id');
            if (confirm('Are you sure you want to delete this delegation?')) {
                $.ajax({
                    url: `/delete_delegation/${delegationId}`,
                    method: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to delete delegation');
                        }
                    },
                    error: function() {
                        alert('Failed to delete delegation');
                    }
                });
            }
        });
    });
    </script>
